{
  "manifest_version": 3,
  "name": "Galaxy virtual phone",
  "version": "0.1",
  "description": "Use your browser as a virtual phone",
  "homepage_url": "https://github.com/emrahcom/galaxy-chrome-extension",
  "permissions": ["alarms", "storage"],
  "host_permissions": ["https://*/api/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/default.html",
    "default_icon": "assets/icon16.png"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
